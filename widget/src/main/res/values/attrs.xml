<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="widget_NumberProgressBar">
        <attr name="widget_progress_current" format="integer" />
        <attr name="widget_progress_max" format="integer" />

        <attr name="widget_progress_unreached_color" format="color" />
        <attr name="widget_progress_reached_color" format="color" />

        <attr name="widget_progress_reached_bar_height" format="dimension" />
        <attr name="widget_progress_unreached_bar_height" format="dimension" />

        <attr name="widget_progress_text_size" format="dimension" />
        <attr name="widget_progress_text_color" format="color" />

        <attr name="widget_progress_text_offset" format="dimension" />

        <attr name="widget_progress_text_visibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
        </attr>
        <attr name="widget_numberProgressBarStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="widget_PageIndicatorView">
        <attr name="widget_interval" format="dimension"></attr>
        <attr name="widget_selectedDrawable" format="reference"></attr>
        <attr name="widget_unSelectedDrawable" format="reference"></attr>
    </declare-styleable>

    <declare-styleable name="widget_JCircleProgress">
        <attr name="widget_startColor" format="color"></attr>
        <attr name="widget_endColor" format="color"></attr>
        <attr name="widget_strokeWidth" format="dimension"></attr>
    </declare-styleable>

    <declare-styleable name="widget_horizental_progressbar">
        <attr name="widget_progress_bg" format="color"></attr>
        <attr name="widget_progress_fg" format="color"></attr>
        <attr name="widget_progress_radius" format="dimension"></attr>
    </declare-styleable>
</resources>