<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nd.widget_android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="org.nd.widget_android.WidgetActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.nd.widget_android.divider.DividerActivity"
            android:exported="false"></activity>
        <activity
            android:name="org.nd.widget_android.indicator.IndicatorActivity"
            android:exported="false" />
        <activity
            android:name="org.nd.widget_android.pulltorefresh.PullToRefreshActivity"
            android:exported="false"></activity>
    </application>

</manifest>